        on_release: root.release_com()

    Button:
        text:"left"
        size_hint: 0.15,0.15
        pos_hint: {"x":0.05, "top":0.3}
        on_press: root.left_com()
        on_release: root.release_com()

    Button:
        text:"right"
        size_hint: 0.15,0.15
        pos_hint: {"x":0.2, "top":0.3}
        on_press: root.right_com()
        on_release: root.release_com()

<MyRedSlider@Slider>:
    canvas.before:
        Color:
            rgba: 1, 0, 0, 0.7  # Red color
        Rectangle:
            size: self.size
            pos: self.pos
<MyBlueSlider@Slider>:
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0.7  # Red color
        Rectangle:
            size: self.size
            pos: self.pos
<MyGreenSlider@Slider>:
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.7  # Red color
        Rectangle:
            size: self.size
            pos: self.pos


<rgb_layout>
    red_slider:red_sliderID
    blue_slider:blue_sliderID
    green_slider:green_sliderID
    orientation: "vertical"
    Button:
        text:"<-"
        size_hint: 0.1,0.1
        pos_hint: {"x":0, "top":1}
        on_press: root.switch()
    BoxLayout:
        orientation: "vertical"
        size_hint: 1,0.4
        pos_hint: {"x":0, "top":0.7}
        MyRedSlider:
            orientation: "horizontal"
            min: 0
            max: 255
            value: 0
            step: 1
            size_hint:0.5, 0.3
            id:red_sliderID
            on_value: root.update_button_color()

        MyBlueSlider:
            orientation: "horizontal"
            min: 0
            max: 255
            value: 0
            step: 1
            size_hint:0.5, 0.3
            id:blue_sliderID
            on_value: root.update_button_color()

        MyGreenSlider:
            orientation: "horizontal"
            min: 0
            max: 255
            value: 0
            step: 1
            size_hint:0.5, 0.3
            id:green_sliderID
            on_value: root.update_button_color()
    Button:
        text:"Submit"
        id: color_button
        size_hint: 0.3,0.2
        pos_hint: {"x":0, "top":0.2}
        on_press:root.submit_rgb()
